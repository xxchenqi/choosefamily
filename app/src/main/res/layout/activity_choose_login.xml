<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/guide_page4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_34DP"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/DIMEN_70DP"
                    android:layout_height="@dimen/DIMEN_1DP"
                    android:layout_marginRight="@dimen/DIMEN_10DP"
                    android:alpha="127"
                    android:background="@color/white_FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/white_FFFFFF" />

                <View
                    android:layout_width="@dimen/DIMEN_70DP"
                    android:layout_height="@dimen/DIMEN_1DP"
                    android:layout_marginLeft="@dimen/DIMEN_10DP"
                    android:alpha="127"
                    android:background="@color/white_FFFFFF" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_64DP"
                android:layout_marginLeft="@dimen/DIMEN_24DP"
                android:layout_marginRight="@dimen/DIMEN_24DP"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_wx_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bg_btn_wx" />

                <ImageView
                    android:id="@+id/btn_qq_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bg_btn_qq" />

                <ImageView
                    android:id="@+id/btn_sina_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bg_btn_sina" />


                <ImageView
                    android:id="@+id/btn_phone_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bg_btn_phone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_privacy"
                android:layout_width="@dimen/DIMEN_240DP"
                android:layout_height="@dimen/DIMEN_25DP"
                android:layout_marginBottom="@dimen/DIMEN_50DP"
                android:background="@drawable/bg_btn_user_privacy"
                android:gravity="center"
                android:text="@string/user_privacy"
                android:textColor="@color/white_CACACA"
                android:textSize="@dimen/DIMEN_12DP" />


        </LinearLayout>
    </RelativeLayout>

</layout>
